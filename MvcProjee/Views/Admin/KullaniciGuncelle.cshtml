@model MvcProjee.Models.kullanicilar
@{
    ViewBag.Title = "KullaniciGuncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <ul id="myTabContent" class="tab-review-design">
                        <li class="active"><a href="#reviews">Kullanıcı Bilgileri Güncelle</a></li>

                    </ul>
                    <form action="/Admin/KullaniciGuncelle" method="post">
                        <div >

                            <input type="hidden" name="userid" value="@Model.userid" />
                            <div class="product-tab-list  " id="reviews">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="review-content-section">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                    <div class="devit-card-custom">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="userad" value="@Model.userad">
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="usersifre" placeholder="Şifre" value="@Model.usersifre">
                                                        </div>
                                                        <div class="form-group">
                                                            <select name="userrol" class="form-control">
                                                                <option value="@ViewBag.rolum" >@Model.userrol</option>
                                                                @foreach (var rol in ViewBag.roller)
                                                                {
                                                                    <option value="@rol.rolid">@rol.rolad</option>
                                                                }

                                                            </select>
                                                           
                                                        </div>
                                                        <input type="submit" class="btn btn-primary waves-effect waves-light" value="Güncelle" />

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

